<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/commonly_bg_color"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
        <View
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="@color/color_main"
            />

        <include layout="@layout/app_bar_mainss" />

        <TextView
            android:id="@+id/tishi"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:textSize="26px"
            android:textColor="#297067"
            android:gravity="center_vertical"
            android:text="未匹配到装置信息,请查询或新增"
            android:drawableLeft="@drawable/tishi"
            android:background="#F9F9F9"
            android:drawablePadding="16px"
            android:visibility="gone"
            android:paddingLeft="10px"
            android:paddingBottom="2px"
            />


        <LinearLayout
            android:id="@+id/app_search_layout"
            android:layout_width="match_parent"
            android:layout_height="75px"
            android:layout_marginTop="2px"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_bh"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_main"
                android:text="保护装置"
                android:textColor="@color/white"
                android:textSize="24px" />

            <TextView
                android:id="@+id/fengexian"
                android:layout_width="5px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/divider_color4"
                android:textSize="24px" />

            <Button
                android:id="@+id/btn_fz"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_white"
                android:text="辅助装置"
                android:textColor="#999999"
                android:textSize="24px" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2px"
            android:background="@color/color_white">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_deep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30px"
                android:layout_marginRight="40px"
                android:textColor="@color/color_main"
                android:textSize="24px"
                android:text="20/80"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/add_device"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14px"
                android:layout_marginRight="14px"
                android:visibility="visible"
                android:src="@drawable/add_device" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/zz_zhinan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B9000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/sousuo_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/youshang"
            android:text="快速搜索"
            android:textColor="#d55500"
            android:textSize="24px"
            android:gravity="center_horizontal"
            android:paddingTop="108px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="129px" />

        <TextView
            android:id="@+id/sousuo_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="输入查询内容"
            android:textColor="#ffffff"
            android:textSize="24px"
            android:layout_marginLeft="55px"
            android:layout_marginTop="203px"
             />

        <TextView
            android:id="@+id/shaixuan_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/youshang"
            android:text="精准搜索"
            android:textColor="#d55500"
            android:textSize="24px"
            android:gravity="center_horizontal"
            android:paddingTop="105px"
            android:layout_marginRight="15px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="129px" />

        <TextView
            android:id="@+id/shaixuan_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击筛选"
            android:textColor="#ffffff"
            android:textSize="24px"
            android:layout_marginRight="75px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="200px"
            />

        <TextView
            android:id="@+id/zz_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/youshang"
            android:text="装置详情"
            android:textColor="#d55500"
            android:textSize="24px"
            android:gravity="center_horizontal"
            android:paddingTop="108px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="360px" />

        <TextView
            android:id="@+id/zz_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击此处进入"
            android:textColor="#ffffff"
            android:textSize="24px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="435px" />


        <ImageView
            android:id="@+id/add_devices"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14px"
            android:layout_marginRight="30px"
            android:src="@drawable/add_device" />

        <TextView
            android:id="@+id/add_devices_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/youxia"
            android:text="装置新增"
            android:textColor="#d55500"
            android:textSize="24px"
            android:gravity="center_horizontal"
            android:paddingTop="75px"
            android:layout_marginBottom="70px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="2px" />

        <TextView
            android:id="@+id/add_devices_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击此处"
            android:textColor="#ffffff"
            android:textSize="24px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="240px"
            android:layout_marginEnd="48px" />




    </RelativeLayout>


</RelativeLayout>