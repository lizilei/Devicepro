<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">


    <LinearLayout
        android:id="@+id/login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="@drawable/logo_background"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="220px"
                android:layout_height="150px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="10px"
                android:src="@drawable/dkylogo" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="220px"
                android:layout_height="160px"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="@color/white"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_gravity="center"
                android:layout_marginLeft="150px"
                android:layout_marginTop="460px"
                android:text="版权所有：@中国电力科学研究院有限公司"
                android:textColor="#0A9E9E"
                android:textSize="16px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:src="@drawable/logo_bottom_background" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="720px"
        android:layout_height="420px"
        android:layout_gravity="center"
        android:layout_marginTop="380px"
        android:layout_marginLeft="35px"
        android:layout_marginRight="35px"
        android:background="@drawable/gray_deep_rounded_rectangle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="560px"
                android:layout_height="74px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:backgroundTint="#0A9E9E"
                android:drawableLeft="@drawable/account"
                android:drawablePadding="16px"
                android:hint="请输入您的用户名"
                android:paddingLeft="16px"
                android:textColorHint="#0A9E9E"
                android:singleLine="true"
                android:textColor="#0A9E9E"
                android:textSize="26px">

                <requestFocus />
            </android.support.design.widget.TextInputEditText>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="560px"
                android:layout_height="74px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28px"
                android:backgroundTint="#0A9E9E"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="16px"
                android:hint="请输入您的密码"
                android:textColorHint="#0A9E9E"
                android:inputType="textPassword"
                android:paddingLeft="16px"
                android:textColor="#0A9E9E"
                android:textSize="26px" />


            <RelativeLayout
                android:layout_width="560px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >

            <CheckBox
                android:id="@+id/cb_remember"
                style="@style/MyCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:paddingLeft="16px"
                android:layout_marginLeft="10px"
                android:text="记住用户名"
                android:textColor="#0A9E9E"
                android:layout_gravity="center_horizontal"
                android:textSize="22px" />

            <TextView
                android:id="@+id/tv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16px"
                android:paddingLeft="16px"
                android:layout_marginLeft="10px"
                android:text="修改设置"
                android:textColor="#0A9E9E"
                android:layout_gravity="center_horizontal"
                android:textSize="22px" />

            </RelativeLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="430px"
                android:layout_height="70px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30px"
                android:layout_marginBottom="60px"
                android:background="@drawable/green_deep_rounded_rectangle"
                android:text="登  录"
                android:textColor="#FEFEFE"
                android:textSize="32px" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
