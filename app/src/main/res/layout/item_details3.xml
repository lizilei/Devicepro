<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38px"
            android:layout_marginRight="8px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="套别："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_tb"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_tb"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="装置电源电压（kV）："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_zzdydy"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_zzdydy"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sbzt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备状态："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_sbzt"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:hint="@string/hint1"
                    android:textColorHint="@color/commonly_text_color9"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_sbzt"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/sjcjfs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据采集方式："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_sjcjfs"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_sjcjfs"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ckfs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出口方式："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_ckfs"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_ckfs"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin">

                <TextView
                    android:id="@+id/dqjyzq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="定期检验周期："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <EditText
                    android:id="@+id/tv_dqjyzq"
                    android:layout_width="match_parent"
                    android:layout_height="36px"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:background="@drawable/device_detials_bg"
                    android:baselineAligned="false"
                    android:minHeight="36px"
                    android:digits="0123456789."
                    android:gravity="center|start"
                    android:hint="@string/hint3"
                    android:inputType="phone|number"
                    android:maxLength="5"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textColorHint="@color/commonly_text_color9"
                    android:textSize="@dimen/common_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备增加方式："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_sbzjfs"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_sbzjfs"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hastyrq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tyrq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退运日期："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_tyrq"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:hint="@string/hint1"
                    android:textColorHint="@color/commonly_text_color9"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_tyrq"
                    android:layout_width="@dimen/common_img_size"
                    android:layout_height="@dimen/common_img_size"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/datepick" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="统计运行时间："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_tjyxsj"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_tjyxsj"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scjxsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上次检修时间："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_scjxsj"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:hint="@string/hint6"
                    android:textColorHint="@color/commonly_text_color9"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_scjxsj"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/datepick" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电源插件型号："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <EditText
                    android:id="@+id/tv_dycjxh"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电源插件更换日期："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_dycjghrq"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_dycjghrq"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数字通道数："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <EditText
                    android:id="@+id/tv_sztds"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模拟通道数："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <EditText
                    android:id="@+id/tv_mntds"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_details3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:textSize="16px" />
</LinearLayout>