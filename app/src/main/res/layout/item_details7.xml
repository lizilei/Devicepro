<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38px"
            android:layout_marginRight="8px"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zcbh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资产编号："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <EditText
                    android:id="@+id/tv_zcbh"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:maxLength="40"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zcxz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资产性质："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_zcxz"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_zcxz"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zcdw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资产单位："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/tv_zcdw"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:textColor="@color/commonly_text_color3"
                    android:textColorHint="@color/commonly_text_color9"
                    android:textSize="@dimen/common_textSize" />

                <ImageView
                    android:id="@+id/iv_zcdw"
                    android:layout_width="@dimen/details_right_height"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:src="@drawable/right_arrow_icon" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_details7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:textSize="16px" />
</LinearLayout>