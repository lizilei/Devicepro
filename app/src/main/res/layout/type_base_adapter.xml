<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/popu_bg2"
    android:layout_marginTop="10px"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_item_margin">

        <TextView
            android:id="@+id/tv_one_device_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0px"
            android:text="模块名称:"
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size" />

        <TextView
            android:id="@+id/tv_one_device_name_right"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/tv_one_device_name_left"
            android:text=""
            android:textSize="16px"
            android:visibility="gone" />

        <Button
            android:id="@+id/fragment_road_ak_add_bt"
            android:layout_width="80px"
            android:layout_height="36px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:background="@drawable/device_detials_bg"
            android:gravity="center"
            android:maxWidth="220px"
            android:minWidth="100px"
            android:text="添加+"
            android:textAllCaps="false"
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size"
            android:visibility="visible" />


        <EditText
            android:id="@+id/et_one_device_name_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:layout_toLeftOf="@+id/fragment_add_bt_mk"
            android:layout_toRightOf="@+id/tv_one_device_name_left"
            android:background="@drawable/device_detials_bg"
            android:focusable="true"
            android:hint="@string/hint2"
            android:maxLength="100"
            android:text=""
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size" />


        <Button
            android:id="@+id/fragment_add_bt_mk"
            android:layout_width="wrap_content"
            android:layout_height="36px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="90px"
            android:layout_toLeftOf="@+id/fragment_road_ak_add_bt"
            android:background="@drawable/right_arrow_icon"
            android:gravity="center"
            android:maxWidth="50px"
            android:minWidth="50px"
            android:padding="5px"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_item_margin">

        <TextView
            android:id="@+id/tv_two_device_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0px"
            android:text="软件版本:"
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size" />

        <TextView
            android:id="@+id/tv_two_device_name_right"
            android:layout_width="wrap_content"
            android:layout_height="30px"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/tv_two_device_name_left"
            android:text=""
            android:textSize="16px"
            android:visibility="gone" />



        <EditText
            android:id="@+id/et_two_device_name_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:layout_toRightOf="@+id/tv_two_device_name_left"
            android:layout_toLeftOf="@+id/fragment_add_bt_bb"
            android:background="@drawable/device_detials_bg"
            android:focusable="true"
            android:hint="@string/hint2"
            android:maxLength="100"
            android:text=""
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size" />

        <Button
            android:id="@+id/fragment_add_bt_bb"
            android:layout_width="wrap_content"
            android:layout_height="36px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:background="@drawable/right_arrow_icon"
            android:gravity="center"
            android:maxWidth="50px"
            android:minWidth="50px"
            android:padding="5px"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_item_margin">

        <TextView
            android:id="@+id/tv_three_device_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0px"
            android:text="校验码:"
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size" />

        <TextView
            android:id="@+id/tv_three_device_name_right"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="@drawable/device_detials_bg"
            android:layout_toRightOf="@+id/tv_three_device_name_left"
            android:text=""
            android:textSize="@dimen/fragment_item_text_size"
            android:visibility="gone"
            />



        <EditText
            android:id="@+id/et_three_device_name_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:layout_toRightOf="@+id/tv_three_device_name_left"
            android:layout_toLeftOf="@+id/fragment_add_bt_jym"
            android:background="@drawable/device_detials_bg"
            android:focusable="true"
            android:hint=""
            android:maxLength="100"
            android:text=""
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size" />

        <Button
            android:id="@+id/fragment_add_bt_jym"
            android:layout_width="wrap_content"
            android:layout_height="36px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:background="@drawable/right_arrow_icon"
            android:gravity="center"
            android:maxWidth="50px"
            android:minWidth="50px"
            android:padding="5px"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_item_margin">

        <TextView
            android:id="@+id/tv_four_device_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0px"
            android:text="生成日期:"
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size" />

        <TextView
            android:id="@+id/tv_four_device_name_right"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="@drawable/device_detials_bg"
            android:layout_toRightOf="@+id/tv_four_device_name_left"
            android:layout_toLeftOf="@+id/fragment_add_bt_scrq"
            android:text=""
            android:textSize="@dimen/fragment_item_text_size"
            android:textColor="@color/commonly_text_color3"
            android:visibility="visible" />



        <EditText
            android:visibility="gone"
            android:id="@+id/et_four_device_name_right"
            android:layout_width="match_parent"
            android:layout_height="36px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@+id/tv_four_device_name_left"
            android:layout_toLeftOf="@+id/fragment_add_bt_scrq"
            android:background="@drawable/device_detials_bg"
            android:focusable="true"
            android:hint=""
            android:maxLength="500"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/sbc_page_number_text"
            android:textSize="@dimen/fragment_item_text_size" />

        <Button
            android:id="@+id/fragment_add_bt_scrq"
            android:layout_width="26px"
            android:layout_height="26px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:layout_marginLeft="10px"
            android:background="@drawable/datepick"
            android:gravity="center"
            android:maxWidth="50px"
            android:minWidth="50px"
            android:padding="5px"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/commonly_text_color3"
            android:textSize="@dimen/fragment_item_text_size"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>