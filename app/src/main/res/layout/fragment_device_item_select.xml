<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_device_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/zimu"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_centerHorizontal="true"
            android:background="#EFEEF4"
            android:gravity="center_vertical"
            android:textSize="26px"
            android:paddingLeft="20px"
            android:textColor="#999999"
            android:text="A" />

        <RelativeLayout
            android:id="@+id/fragment_one_device_item_one"
            android:layout_width="match_parent"
            android:layout_height="80px">

            <TextView
                android:id="@+id/fragment_one_device_item_select_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:text="北京电力研究所"
                android:textColor="@color/sbc_page_number_text"
                android:textSize="20px" />

            <TextView
                android:id="@+id/fragment_two_device_item_select_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/fragment_one_device_item_select_tv"
                android:gravity="center"
                android:textColor="@color/commonly_text_color6"
                android:textSize="20px"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_end_select"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40px"
                android:src="@drawable/choose_checked"
                android:textSize="@dimen/fragment_item_text_size"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/result_minor_text"></View>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>




