<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_choice_type_tv_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="排序"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_choice_type_tv_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="保护类别"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/search_choice_type_tv_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="筛选"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/search_choice_type_ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/search_choice_type_ll_one_tv"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="默认排序方式选择"
            android:textColor="#FF999999"
            android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/search_choice_type_ll_one_tv"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:button="@null"
            android:gravity="center"
            android:text="电压等级"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp" />

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:button="@null"
            android:gravity="center"
            android:text="保护类别"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/frag_coach_choice_ll"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/bg"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/coach_choice_tv_top"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="默认保护类别选择"
            android:textColor="#FF999999"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@+id/coach_choice_tv_top"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/coach_choice_national_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:text="变压器保护"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/coach_choice_gold_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:text="发电机保护"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/coach_choice_champion_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:text="线路保护"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/coach_choice_champio_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:text="母线保护"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/select_button_type_three_ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/bg"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/select_button_type_three_tv"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="装置处理状态"
            android:textColor="#FF999999"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_below="@+id/select_button_type_three_tv"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/select_button_type_three_dele_cb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/coach_choice_gold_type_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:text="处理"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/coach_choice_champion_type_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:button="@null"
                android:gravity="center"
                android:text="未处理"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/frag_coach_choice_bt_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coach_choice_reset_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#FF999999"
            android:gravity="center"
            android:text="重置"
            android:textColor="#FFFFFFFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/coach_choice_okay_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/viewfinder_laser"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>