<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="20dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_type"
        android:orientation="vertical">

        <TextView
            android:id="@+id/acce_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="青年志愿互动.doc"
            android:textColor="@color/commonly_text_color3"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/acce_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="284.64KB"
            android:textColor="@color/commonly_text_color9"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/acce_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:text="2017-11-06"
            android:textColor="@color/commonly_text_color9"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>