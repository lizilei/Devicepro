<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">


        <RelativeLayout
            android:id="@+id/ll_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shouyes"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_alignBottom="@+id/textView9"
                android:layout_alignEnd="@+id/textView"
                android:layout_alignRight="@+id/textView"
                android:layout_marginBottom="16px"
                android:layout_marginEnd="34px"
                android:layout_marginRight="34px"
                android:enabled="false"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="18px"
                android:layout_marginLeft="52px"
                android:layout_marginStart="52px"
                android:enabled="false"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="140px"
                android:layout_height="240px"
                android:layout_centerVertical="true"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="262px"
                android:enabled="false"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="28px"
                android:layout_marginRight="28px"
                android:layout_marginTop="15px"
                android:enabled="false"
                android:gravity="center" />


        </RelativeLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/color_white"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_mains"
            app:itemBackground="@color/color_white"
            app:itemTextAppearance="@style/MyTabLayoutTextAppearance"
            app:itemTextColor="@color/commonly_text_color3"
            app:menu="@menu/activity_main_drawers" />

    </android.support.v4.widget.DrawerLayout>

    <RelativeLayout
        android:id="@+id/shouye_zhinan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B9000000"
        android:visibility="visible">

        <TextView
            android:id="@+id/bdz_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="139px"
            android:layout_marginTop="230px"
            android:background="@drawable/zuoxia"
            android:gravity="center_horizontal"
            android:paddingTop="65px"
            android:text="扫一扫"
            android:textColor="#d55500"
            android:textSize="24px" />

        <TextView
            android:id="@+id/bdz_img11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bdz_img1"
            android:layout_alignTop="@+id/bdz_img1"
            android:layout_marginEnd="16px"
            android:layout_marginTop="27px"
            android:gravity="center"
            android:text="点击扫码进入"
            android:textColor="#ffffff"
            android:textSize="24px" />

        <ImageView
            android:id="@+id/bdz_img111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bdz_img1"
            android:layout_toStartOf="@+id/bdz_img11"
            android:background="@drawable/huang"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bdz_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="100px"
            android:layout_marginStart="110px"
            android:background="@drawable/zuoxia"
            android:gravity="center_horizontal"
            android:paddingTop="65px"
            android:text="变电站列表"
            android:textColor="#d55500"
            android:textSize="24px" />

        <TextView
            android:id="@+id/bdz_img12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bdz_tx"
            android:layout_alignTop="@+id/bdz_tx"
            android:layout_marginStart="20px"
            android:layout_marginTop="27px"
            android:gravity="center"
            android:text="点击此处进入"
            android:textColor="#ffffff"
            android:textSize="24px" />


        <TextView
            android:id="@+id/zz_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="100px"
            android:layout_marginStart="520px"
            android:background="@drawable/youxia"
            android:gravity="center_horizontal"
            android:paddingTop="65px"
            android:text="装置列表"
            android:textColor="#d55500"
            android:textSize="24px" />


        <TextView
            android:id="@+id/zz_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/zz_tx"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="280px"
            android:layout_marginEnd="24px"
            android:gravity="center"
            android:text="点击此处进入"
            android:textColor="#ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/wode_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="560px"
            android:layout_marginTop="45px"
            android:background="@drawable/youshang"
            android:gravity="center_horizontal"
            android:paddingTop="108px"
            android:text="我的"
            android:textColor="#d55500"
            android:textSize="24px" />

        <TextView
            android:id="@+id/wode_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="24px"
            android:layout_marginTop="117px"
            android:gravity="center"
            android:text="点击头像进入"
            android:textColor="#ffffff"
            android:textSize="24px" />


    </RelativeLayout>

</RelativeLayout>


