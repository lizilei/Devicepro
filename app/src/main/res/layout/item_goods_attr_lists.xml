<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_marginTop="5dp"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/attr_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="制造厂家"
                android:textSize="16dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/attr_list_imgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="14dp"
                android:src="@drawable/sort_common_down" />

            <TextView
                android:id="@+id/quanbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="16dp"
                android:layout_toLeftOf="@id/attr_list_imgs"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    <cn.com.sgcc.dev.view.viewinterface.MFCleanEditText
        android:id="@+id/et_zzcj"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:focusable="true"
        android:padding="8dp"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittext_shape"
        android:gravity="center"
        android:hint="请选择或者输入制造厂家" />

        <cn.com.sgcc.dev.view.viewinterface.NoScrollGridview
            android:id="@+id/yuguo_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:horizontalSpacing="14dp"
            android:numColumns="3"
            android:verticalSpacing="14dp" />

</LinearLayout>