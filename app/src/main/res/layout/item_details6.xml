<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38px"
            android:layout_marginRight="8px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_edbbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="额定变比："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/item_details_edbj"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:text=""
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/tv_edbb"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:maxLength="20"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sjbbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="实际变比："
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />

                <TextView
                    android:id="@+id/item_details_sjbj"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:text=""
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/tv_sjbb"
                    android:layout_width="0px"
                    android:layout_height="@dimen/details_right_height"
                    android:layout_marginLeft="@dimen/details_right_margin"
                    android:layout_weight="1"
                    android:background="@drawable/device_detials_bg"
                    android:gravity="center|start"
                    android:paddingLeft="@dimen/details_right_input_padding"
                    android:maxLength="20"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/common_textSize" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/fragment_add_bt_zqj"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_zqj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="准确级："
                        android:textColor="@color/commonly_text_color3"
                        android:textSize="@dimen/common_textSize" />

                    <TextView
                        android:id="@+id/item_details_zqj"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/details_right_height"
                        android:layout_marginLeft="@dimen/details_right_margin"
                        android:background="@drawable/device_detials_bg"
                        android:gravity="center|start"
                        android:paddingLeft="@dimen/details_right_input_padding"
                        android:text=""
                        android:textColor="@color/commonly_text_color3"
                        android:textSize="@dimen/common_textSize" />
                </LinearLayout>

                <Button
                    android:id="@+id/fragment_add_bt_zqj"
                    android:layout_width="wrap_content"
                    android:layout_height="36px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/right_arrow_icon"
                    android:gravity="center"
                    android:maxWidth="50px"
                    android:minWidth="50px"
                    android:padding="5px"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/fragment_item_text_size"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_right_top_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/fragment_add_bt_ct"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="CT二次额定电流（A）："
                        android:textColor="@color/commonly_text_color3"
                        android:textSize="@dimen/common_textSize" />

                    <TextView
                        android:id="@+id/item_details_ct"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/details_right_height"
                        android:layout_marginLeft="@dimen/details_right_margin"
                        android:background="@drawable/device_detials_bg"
                        android:gravity="center|start"
                        android:paddingLeft="@dimen/details_right_input_padding"
                        android:text=""
                        android:textColor="@color/commonly_text_color3"
                        android:textSize="@dimen/common_textSize" />
                </LinearLayout>

                <Button
                    android:id="@+id/fragment_add_bt_ct"
                    android:layout_width="wrap_content"
                    android:layout_height="36px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:background="@drawable/right_arrow_icon"
                    android:gravity="center"
                    android:maxWidth="50px"
                    android:minWidth="50px"
                    android:padding="5px"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/commonly_text_color3"
                    android:textSize="@dimen/fragment_item_text_size"
                    android:visibility="visible" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_details6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:textSize="16px" />
</LinearLayout>