<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll"
    android:background="@color/commonly_bg_color2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="30px"
        android:layout_height="30px"
        android:src="@drawable/tanhao"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center|start"
        android:paddingLeft="28px"
        android:text="安装及运维信息"
        android:textColor="@color/demo_left_text_selector"
        android:textSize="@dimen/common_textSize_large" />

    <View
        android:id="@+id/vv"
        android:layout_width="160px"
        android:layout_height="1px"
        android:layout_marginLeft="28px"
        android:layout_marginRight="28px"
        android:background="@color/divider_color2" />

</LinearLayout>