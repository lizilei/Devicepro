<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/commonly_bg_color"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/app_bar_mains" />

        <TextView
            android:id="@+id/tishi"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="#F9F9F9"
            android:drawableLeft="@drawable/tishi"
            android:drawablePadding="16px"
            android:gravity="center_vertical"
            android:paddingLeft="10px"
            android:text="匹配装置失败,请选择变电站再查询或添加装置信息"
            android:textColor="#297067"
            android:textSize="26px"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="horizontal" />

            <cn.com.sgcc.dev.view.viewinterface.LetterView
                android:id="@+id/letter_view"
                android:layout_width="34px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/contact_dialog"
                android:layout_width="110px"
                android:layout_height="110px"
                android:layout_gravity="center"
                android:layout_marginRight="300px"
                android:layout_marginTop="288px"
                android:layout_toLeftOf="@+id/left_zimu"
                android:background="@color/color_main"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="33px"
                android:visibility="invisible" />

            <cn.com.sgcc.dev.view.viewinterface.SideBar
                android:id="@+id/left_zimu"
                android:layout_width="34px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_deep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="40px"
                android:layout_marginRight="40px"
                android:textSize="24px"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bzd_zhinan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B9000000">

        <TextView
            android:id="@+id/sousuo_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40px"
            android:layout_marginTop="129px"
            android:background="@drawable/youshang"
            android:gravity="center_horizontal"
            android:paddingTop="115px"
            android:text="快速搜索"
            android:textColor="#d55500"
            android:textSize="24px" />

        <TextView
            android:id="@+id/wode_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30px"
            android:layout_marginTop="210px"
            android:gravity="center"
            android:text="输入查询内容"
            android:textColor="#ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/bdzitem_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="86px"
            android:layout_marginTop="315px"
            android:background="@drawable/youshang"
            android:gravity="center_horizontal"
            android:paddingTop="105px"
            android:text="装置列表"
            android:textColor="#d55500"
            android:textSize="24px" />

        <TextView
            android:id="@+id/bdzitem_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/bdzitem_tx"
            android:layout_marginStart="39px"
            android:layout_marginTop="385px"
            android:gravity="center"
            android:text="点击此处进入"
            android:textColor="#ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/zimu_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="82px"
            android:background="@drawable/youxias"
            android:gravity="center_horizontal"
            android:paddingRight="15px"
            android:paddingTop="65px"
            android:text="快速定位"
            android:textColor="#d55500"
            android:textSize="24px" />

        <TextView
            android:id="@+id/zimu_tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="205px"
            android:layout_marginEnd="40px"
            android:gravity="center"
            android:text="点击对应首字母"
            android:textColor="#ffffff"
            android:textSize="22px" />


    </RelativeLayout>

</RelativeLayout>