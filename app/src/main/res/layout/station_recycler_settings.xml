<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="80px"
    android:layout_margin="10px"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/device_photo"
        android:layout_width="66px"
        android:layout_height="66px"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:src="@drawable/zztx" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/device_photo"
        android:layout_toLeftOf="@+id/jiantou_photo"
        android:layout_marginLeft="50px"
        android:padding="6px"
        android:textColor="@color/commonly_text_color3"
        android:textSize="26px" />

    <ImageView
        android:id="@+id/jiantou_photo"
        android:layout_width="44px"
        android:layout_height="44px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:padding="5px"
        android:layout_gravity="center"
        android:src="@drawable/right_arrow_icon" />




</RelativeLayout>